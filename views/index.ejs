<%-include("./partials/header.ejs") %> 
 
    <main>
      <div class="container">
        <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis hero-bg">
          <div class="col-lg-6 p-4 bg-nav text-light rounded">
            <h1 class="display-4  fst-italic">The Importance of wireFraming in web design</h1>
            <p class="lead my-3 ">Wireframing is a crucial step in the UI/UX design process. It serves as a blueprint for your digital product, helping you to visualize and structure your ideas before diving into the details of design and development.</p>
            <p class="lead mb-0"><a href="/blogs" class=" text-light fw-bold">Continue reading...</a></p>
          </div>
        </div>
      </div>

      <section>
        <div class="container">
          <div class="row mb-2">
            <% if(locals.post) { %>
              <% post.forEach((p)=> { %>
            <div class="col-md-6" data-id="<%=p.id%>">
              <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                  <strong class="d-inline-block mb-2 <%=p.category %>"><%=p.category %></strong>
                  <h3 class="mb-0"><%=p.title %></h3>
                  <div class="my-1 text-body-secondary">
                      <%=p.date %> 
                      by <a class="link-offset-2 link-underline link-underline-opacity-0" href="#"><%=p.author %></a>
                  </div>
                  <p class="card-text mb-auto"><%=p.preview %> </p>
                  <a href="/blog/<%=p.id%>" class=" gap-1 icon-link <%=p.category %>">Continue reading</a>
                </div>
              </div>
            </div>
            <% }) %> 
            <% } else { %>
              <h2>No posts to show</h2>
          <% } %>   
</div>
      </section>
      </main>
 
<%-include("./partials/footer.ejs") %> 
   